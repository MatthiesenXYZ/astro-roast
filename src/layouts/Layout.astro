---
import { ShoelaceHeader } from 'astrolace:components/header';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
	title?: string;
	description?: string;
	ogImage?: string;
}

// Get the title, description, and ogImage from props
const { title, description, ogImage } = Astro.props;

// Generate canonical URL
const canonical = new URL(Astro.url.pathname, Astro.url.origin).href;

// Get current timestamp for cache busting
const CurrentTimeStamp = (new Date().getTime() / 1000).toFixed(0);

// Generate Open Graph image URL
const ogImageURL = `${Astro.site}${ogImage}?v=${CurrentTimeStamp}`;
---

<html lang="en" class="sl-theme-dark">
	<head>
		<BaseHead 
			title={title} 
			description={description} 
			canonical={canonical} 
			ogImageURL={ogImageURL} 
			/>
        <ShoelaceHeader />
	</head>
	<body class="overflow-x-hidden font-sans">
		<div class="w-[100vw] flex flex-col">

			<Header />

			<slot />

			<Footer />

		</div>
	</body>
</html>
